<div style="margin:50px">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <h3>Edit your parking</h3>
          <%= simple_form_for @parking do |f| %>
            <%= f.input :address, placeholder: 'Parking' %>
            <%= f.input :height, placeholder: 'Height' %>
            <%= f.input :width, placeholder: 'Width' %>
            <%= f.input :length, placeholder: 'Length' %>
            <%= f.input :description, placeholder: 'Description' %>
            <%= f.input :pass_code, placeholder: 'Passcode' %>
            <%= f.input :start_date, placeholder: 'Available Start Date' %>
            <%= f.input :end_date, placeholder: 'Available End Date' %>
            <%= f.input :price, placeholder: 'Price per hour' %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.submit class: 'btn btn-flat' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
