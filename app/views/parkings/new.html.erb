<div class="container py-5" style="margin-top: 40px">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new parking</h3>
        <%= simple_form_for @parking do |f| %>
          <%= f.input :address, placeholder: 'Parking' %>
          <%= f.input :height, placeholder: 'Height' %>
          <%= f.input :width, placeholder: 'Width' %>
          <%= f.input :length, placeholder: 'Length' %>
          <%= f.input :description, placeholder: 'Description' %>
          <%= f.input :pass_code, placeholder: 'Passcode' %>
          <%= f.input :availability_date, placeholder: 'Availability Date' %>
          <%= f.input :availability_time, placeholder: 'Availability Time' %>
          <%= f.input :price, placeholder: 'Price per hour' %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
